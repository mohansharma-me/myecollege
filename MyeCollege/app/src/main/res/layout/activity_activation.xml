<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:animateLayoutChanges="true"
    tools:context="com.samratinfosys.myecollege.Activation">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/MyTheme.colors.orangeCC"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="To activate your account, please enter your User ID and click 'Request Code' button."
            android:textStyle="bold"
            android:textColor="@color/MyTheme.colors.white"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="If you are a Student than your User ID is your enrollment number, or if you are Faculty than your User ID is your registered e-mail address."
            android:textStyle="bold"
            android:textColor="@color/MyTheme.colors.white"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/MyTheme.colors.orange"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Activate your User ID:"
                android:textStyle="bold"
                android:textColor="@color/MyTheme.colors.white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="@color/MyTheme.colors.white"
                android:id="@+id/txtUserID"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRequestCode"
                android:text="Request Code"
                android:onClick="requestCode"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:text="After requesting code, you will get mail having that code, then write that code here."
            android:textStyle="bold"
            android:textColor="@color/MyTheme.colors.white"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/MyTheme.colors.orange"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Your Activation Code:"
                android:textStyle="bold"
                android:textColor="@color/MyTheme.colors.white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="@color/MyTheme.colors.white"
                android:id="@+id/txtActivationCode"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnActivateNow"
                android:text="Activate Now"
                android:onClick="activateNow"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:text="Don't forgot to change your password after first login attempt."
            android:textStyle="bold"
            android:textColor="@color/MyTheme.colors.black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
