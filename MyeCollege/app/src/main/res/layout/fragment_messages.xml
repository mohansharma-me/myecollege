<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/MyTheme.colors.whiteAA"
    android:animateLayoutChanges="true"
    tools:context="com.samratinfosys.myecollege.UserPanel">

    <LinearLayout
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/holderEmptyView"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="@dimen/font_size_large_1x"
                android:textStyle="bold"
                android:text="No messages"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ListView android:id="@+id/lvMessages"
            android:choiceMode="singleChoice"
            android:divider="@color/MyTheme.colors.black33"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</ScrollView>